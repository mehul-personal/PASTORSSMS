<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvMessageImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:scaleType="fitCenter" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvGroupName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Group Name" android:textSize="20sp"
                android:textColor="#1ec3c5" />

            <TextView
                android:id="@+id/txvMessageContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
android:singleLine="true"
                android:text="Group Name" android:textSize="15sp"
                android:textColor="#888888" />
            <TextView
                android:id="@+id/txvMessageDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2" android:paddingRight="5dp"
                android:gravity="center_vertical|right"
                android:paddingLeft="5dp"

                android:text="Yesterday" android:textSize="15sp"
                android:textColor="#888888" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imvGroupArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="10dp" android:visibility="gone"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next" />

    </LinearLayout>
</LinearLayout>